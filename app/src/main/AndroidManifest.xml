<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droidbayapps.popularmovies_2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.droidbayapps.popularmovies_2.MovieGridActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.droidbayapps.popularmovies_2.MovieDetailsActivity"
            android:label="@string/title_activity_movie_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <provider
            android:authorities="com.droidbayapps.popularmovies_2.FavoritesProvider"
            android:name=".data.generated.FavoritesProvider" />
    </application>

</manifest>
